function init_player()
	player={
		x=63,
		y=63,
		f=true,
		sp=0		
	}
end

function player_movement()
	if btn(⬅️) then
		player.x = player.x-1
		player.f = true
		player.sp = 0
	end
	
	if btn(➡️) then
		player.x = player.x+1
		player.f = false
		player.sp = 0
	end
	
	if btn(⬆️) then
		player.y = player.y-1
		player.sp = 1
	end
	
	if btn(⬇️) then
		player.y = player.y+1
		player.sp = 2
	end
end

function draw_player()
	spr(player.sp, player.x, player.y, 1,1,player.f)
end
